<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="cuisine"
            type="id.ac.ui.cs.mobileprogramming.marcokenata.resi_me.data.network.response.CategoryMeals" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_food"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:recipeTicketImage="@{cuisine.strMealThumb}"
    />

    <TextView
        android:id="@+id/tv_strMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_food"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@{cuisine.strMeal}"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>